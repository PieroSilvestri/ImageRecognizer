<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ImageRecognizer.ProvaPage">
	<ContentPage.Content>
	<!--
	<Grid><Image Source="NewLogo.png" Opacity="50"> </Image></Grid>
	-->
	<StackLayout Orientation="Vertical" Spacing="20" Padding="10, 20, 10, 0"> 
			<Button Text="Back" 
					BackgroundColor="#1A80FD" 
					TextColor="White" 
					HorizontalOptions="Start"
					VerticalOptions="Start"
					WidthRequest="70"/>
		<StackLayout Orientation="Vertical" Padding="0, 0, 0, 20" Spacing="10">
			<Label x:Name="header" HorizontalOptions="CenterAndExpand" FontSize="25" />
			<Image x:Name="profileImage" HeightRequest="100"/> 
			<Button x:Name="chageImage" Text="Change profile picture"
					FontSize="Small" TextColor = "#1A80FD" 
					BackgroundColor="Transparent" HorizontalOptions="Center"
					BorderColor = "Transparent" />
		</StackLayout>

		<StackLayout Orientation="Horizontal">
			<Image Source="user.png" HeightRequest="30" ></Image>
			<Label x:Name="labelNome" FontSize="25" />
		</StackLayout>

		<BoxView HorizontalOptions="FillAndExpand" Color="Gray" HeightRequest="1"/>

		<StackLayout Orientation="Horizontal">
			<Image Source="ageIcon.png" HeightRequest="30" ></Image>
			<Label x:Name="labelAge" FontSize="25" />
		</StackLayout>

		<BoxView HorizontalOptions="FillAndExpand" Color="Gray" HeightRequest="1"/>
			
	</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
