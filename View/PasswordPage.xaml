<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ImageRecognizer.PasswordPage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout Orientation="Vertical" HorizontalOptions="Center" Spacing="20">

				<Image x:Name="LogoImage" Source="NewLogo.png" HeightRequest="80" >
					<Image.GestureRecognizers>
					        <TapGestureRecognizer
					                Tapped="EasterEgg"
					                NumberOfTapsRequired="1" />
					</Image.GestureRecognizers>		
				</Image>
				<Label x:Name="labelNome" HorizontalOptions = "Center" FontSize = "Medium"/>
				<Image x:Name="ProfilePicture" Source="AddPhotoIcon.png" HeightRequest="160" />
				
				<StackLayout Orientation="Vertical">
					<Entry x:Name="Password" 
						Placeholder="Password"
						HorizontalTextAlignment="Center"
						IsPassword ="true"
						HorizontalOptions="FillAndExpand" />
				</StackLayout>
				
				<Button Text="Login" 
					BackgroundColor="#1A80FD" 
					TextColor="White" 
					HorizontalOptions="FillAndExpand"
					Clicked="DoLoginWithPassword">
				</Button>
				
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage> 