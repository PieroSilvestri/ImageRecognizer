<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ImageRecognizer.LoginPage">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" Padding="20, 50, 20, 0" Spacing="50">
			<StackLayout Orientation="Vertical" Spacing="10">
				<Image x:Name="LogoImage" Source="NewLogo.png" HeightRequest="200">
				</Image>
			</StackLayout>
			<StackLayout Orientation="Vertical" Spacing="10">
				<Image x:Name="LoginImage" Source="AddPhotoIcon.png" HeightRequest="120">
					    <Image.GestureRecognizers>
					        <TapGestureRecognizer
					                Tapped="LoginImage_OnClicked"
					                NumberOfTapsRequired="1" />
					  </Image.GestureRecognizers>
				</Image>
			</StackLayout>
			<StackLayout Orientation="Vertical" Spacing="10">
				<Button Text="Register" Clicked="DoRegistrator" BackgroundColor="#1A80FD" TextColor="White" />
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
