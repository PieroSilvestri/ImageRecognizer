<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ImageRecognizer.LoginPage">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" Padding="20, 30, 20, 0">
			<Label Text="Image Recognize" HorizontalOptions="CenterAndExpand" FontSize="25" />
				<Image x:Name="LogoImage" Source="NewLogo.png" HeightRequest="200">
				</Image>

			<StackLayout Orientation="Vertical" Padding = "0, 50, 0, 0">
				<Button Text="Login" Clicked="LoginImage_OnClicked" BackgroundColor="#1A80FD" TextColor="White"/>
		
			</StackLayout>

			<StackLayout Orientation="Horizontal" HorizontalOptions= "CenterAndExpand">
				<StackLayout Orientation="Vertical" HorizontalOptions= "FillAndExpand" VerticalOptions= "CenterAndExpand">
					<BoxView HorizontalOptions="FillAndExpand" Color="Gray" HeightRequest="1" />
				</StackLayout>	
				<StackLayout Orientation="Vertical" >
				<Label Text="or" HorizontalOptions="CenterAndExpand" />
				</StackLayout>
				<StackLayout Orientation="Vertical" HorizontalOptions= "FillAndExpand" VerticalOptions= "CenterAndExpand" >
					<BoxView HorizontalOptions="FillAndExpand" Color="Gray" HeightRequest="1" />
				</StackLayout>	
			</StackLayout>
			
			<StackLayout Orientation="Vertical" Spacing="10" >
				<Button Text="Register" Clicked="DoRegistrator" BackgroundColor="Transparent" TextColor="Black" BorderWidth="1"/>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
